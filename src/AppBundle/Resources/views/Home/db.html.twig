{% extends 'AppBundle::base.html.twig' %}

{% block title %}DB - {{ parent() }}{% endblock %}

{% block body %}
<script src="/js/db.js"></script>

<h3>DB TEST</h3>
<div>
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>NAME</th>
        <th>E-MAIL</th>
        <th>TELL</th>
        <th>DELETE</th>
      </tr>
    </thead>
    <tbody>
      {% for value in inquiry %}
      <tr>
        <td class="data-id">{{value.id}}</td>
        <td>{{value.name}}</td>
        <td>{{value.email}}</td>
        <td>{{value.tell}}</td>
        <td style="text-align: center;"><i class="fa fa-trash-o data-del" aria-hidden="true"></i></td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

<h3>Add new data</h3>
<form action="/db" method="POST">
  <p>Name:<input type="text" name="name"></p>
  <p>E-mail:<input type="text" name="email"></p>
  <p>Tell:<input type="text" name="tell"></p>
  <input type="submit" value="submit">
</form>

{% endblock %}
